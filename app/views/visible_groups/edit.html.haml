.col-xs-10.col-xs-offset-1
  %h2
    = "#{@visible_group.name}".titleize
  .well.bs-component
    = form_for @visible_group, url: '/visible_groups/update', method: 'post' do |f|
      = render 'form', f:  f
      .row.form-group.text-center
        %a.btn.btn-danger{href: "/visible_groups/destroy/#{@visible_group.id}"} Delete
        = submit_tag 'Save', class: 'btn btn-success'
