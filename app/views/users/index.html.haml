.col-xs-10.col-xs-offset-1
  .jumbotron.text-center{style: 'margin-top: 20px;'}
    %h2 Users
  .row
    .bs-component
      .list-group
        - @users.sort{|u1,u2| u1.last.downcase <=> u2.last.downcase}.each do |user|
          .list-group-item
            .row-action-primary
              - if User.find(session[:user_id]).admin
                = link_to "edit/#{user.id}" do
                  %i.mdi-content-create
              - else
                %i.mdi-notification-sms-failed
            .row-content
              .list-group-item-heading
                = "#{user.last}, #{user.first}"
              .list-group-item-content
                = "Email : #{user.email}"
  %a.btn.btn-info.btn-fab.btn-raise.mdi-content-add{href:"new", style: 'position: fixed; bottom: 15%; right: 15%'}
    .ripple-wrapper
